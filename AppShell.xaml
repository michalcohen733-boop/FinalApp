<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinalApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FinalApp.Views"
    BackgroundColor="pink"

    Title="FinalApp">

    <ShellContent
     Title="Home Page"
     ContentTemplate="{DataTemplate local:MainPage}"
     Route="MainPage" />
    <ShellContent
     Title="Sign Up"
     ContentTemplate="{DataTemplate local:SignUpPage}"
     Route="SignUpPage" />
    <ShellContent
     Title="Sign In"
     ContentTemplate="{DataTemplate local:SignInPage}"
     Route="SignInPage" />
    <Shell.TitleView>
        <HorizontalStackLayout>
            <Button
                Margin="5"
                BackgroundColor="Wheat"
                Command="{Binding LogoutCommand}"
                FontSize="24"
                FontFamily="MyMaterialSymbols"
                TextColor="Black"
                Text="logout"
                HorizontalOptions="Start" />

            <!--<Button
                Margin="0,5,5,5"
                BackgroundColor="Wheat"
                Command="{Binding AdminLoginCommand}"
                FontSize="24"
                FontFamily="MaterialIcons"
                TextColor="Black"
                Text="&#xf02e;"
                HorizontalOptions="Start"
                IsVisible="True" />-->
        </HorizontalStackLayout>
    </Shell.TitleView>

    

</Shell>

